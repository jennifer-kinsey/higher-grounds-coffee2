<% if current_user.try(:admin?) %>
  <%= link_to "Edit", edit_product_path(@product), remote: true, id: "edit_product_link" %>
  <%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
    :method => "delete"} %>
<% end %>

<br>
<div id="product-content">
  <%= render 'product' %>
</div>

<h3>Reviews:</h3>

<div id="all-reviews">
  <%= render 'reviews/reviews' %>
</div>
