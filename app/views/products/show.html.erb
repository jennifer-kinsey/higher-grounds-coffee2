<h1><%= @product.name %> Coffee</h1>

<% if current_user.try(:admin?) %>
  <%= link_to "Edit", edit_product_path(@product), remote: true, id: "edit_product_link" %>
  <%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
    :method => "delete"} %>
<% end %>

<br>
<div class="product-content">
  <%= render 'product' %>
</div>

<h3>Reviews:</h3>

<% if @product.reviews.any? %>
  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.author %> |
        <%= review.content %>
        <% if current_user && current_user.admin %>
          <button>
            <%= link_to "Delete", product_review_path(@product, review),
              :data => {:confirm => "Are you sure?",
              :method => "delete"}, class:"delete-review"
            %>
          </button>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<% if current_user %>
  <button><%= link_to "Add a review", new_product_review_path(@product) %></button>
<% end %>
